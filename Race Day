let raceNumber = Math.floor(Math.random() * 1000);
let earlyRegister = false;
let runnerAge = 18;
if (earlyRegister = true && runnerAge > 18) {
  raceNumber += 1000;
}
if (earlyRegister = true && runnerAge > 18) {
  console.log(`${raceNumber} your race starts at 9.30am`);
} else if (earlyRegister = false && runnerAge > 18) {
    console.log(`${raceNumber} Late adults run at 11.00am`);
} else if (runnerAge < 18) {
  console.log(`${raceNumber} Youth registrants run at 12.30pm regardless of registration`);
} else {
  console.log('Please see the registration desk');
}
